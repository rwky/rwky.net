[Unit]
Description=rwky.net node
After=docker.service
After=iptables-restore.service

[Service]
TimeoutStartSec=0
ExecStartPre=/usr/bin/sleep 1
ExecStartPre=-/usr/bin/docker pull rwky/rwky.net:latest
ExecStartPre=-/usr/bin/docker kill rwky_net 
ExecStartPre=-/usr/bin/docker rm rwky_net
ExecStart=/usr/bin/docker run -p 443:443 -p 80:80 -v /srv/letsencrypt:/srv/letsencrypt:ro -v /srv/rwky.net:/home/app/config:ro -v /srv/log:/var/log --name rwky_net rwky/rwky.net:latest

[Install]
WantedBy=multi-user.target
